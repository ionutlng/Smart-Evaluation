@model List<Evaluation.ViewModels.QuestionCourse>

@{
    ViewData["Title"] = "My questions";
}
<br />

<p>
    <a asp-controller="Profesor" asp-action="Index"><i class="fas fa-arrow-alt-circle-left fa-2x"></i></a>
    <a asp-action="Create" class="btn btn-primary btn-sm float-right">Create New</a>
</p>
<table class="table table-hover table-sm table-bordered">
    <thead class="thead-light">
        <tr class="text-center">
            <th style="width: auto"> Text  </th>
            <th style="width: auto"> Answer </th>
            <th style="width: 12%"> Difficulty </th>
            <th> Time </th>
            <th style="width: 10%">Course </th>
            <th style="width: 7%"> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Answer)
                </td>
                <td>
                    @for (var i = 0; i < item.Difficulty / 2; i++)
                    {
                        <i class="text-warning fa fa-star"></i>
                    }
                    @if (item.Difficulty % 2 != 0)
                    {
                        <i class="text-warning fas fa-star-half-alt"></i>
                    }
                    @for (var i = (item.Difficulty + 1) / 2; i < 5; i++)
                    {
                        <i class="text-warning far fa-star"></i>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Group">
                        <form asp-action="Delete" asp-route-id="@item.qId">
                            <button class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
