@model Evaluation.Models.Question

@{
    ViewData["Title"] = "Create";
}

<br /><br>
<h2 class="text-center"> Create question   </h2>
<a asp-action="Index"><i class="fas fa-arrow-alt-circle-left fa-2x"></i></a>
<hr />
<div class="row ">
    <div class="col-md-4 mx-auto ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h6 class="text-center">Text</h6>
                <input asp-for="Text" class="form-control text-center" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="text-center">Answer</h6>
                <input asp-for="Answer" class="form-control text-center" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="text-center">Question difficulty</h6>
                <input asp-for="Difficulty" class="form-control text-center" />
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="text-center">Time</h6>
                <input asp-for="Time" class="form-control text-center" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6 class="text-center">Course</h6>
                <select asp-for="CourseId" class="form-control text-center" asp-items="ViewBag.Questions"></select>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary center-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Styles{
    <link href="@Url.Content("~/css/forms.css")" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

}

